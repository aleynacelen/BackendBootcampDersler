@model RandevuSistemi_GokhanAleyna.Models.Appointment

<h2>Randevu Al</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Date">Tarih</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time">Saat</label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId">Kullanıcı ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>

<a asp-action="Index">Ana Sayfaya Dön</a>

